(jbuild_version 1)

;; Temporaly Hack to make build possible
(alias
 ((name database)
  (deps ((glob_files ../database/*.mar)))))

(rule
 ((targets (af.mar))
  (deps    (af.txt (alias database)))
  (action  (chdir .. (run touch ${<})))))

